<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/color_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color_Bar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/immersion_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Immersion_Bar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/transparent_bar_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transparent_Bar_1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/transparent_bar_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transparent_Bar_2"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/hide_bar_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hide_Bar_1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/hide_bar_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hide_Bar_2"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/drawer_color_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="drawer_color_bar"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/xfringe_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xfringe_bar"
                android:textAllCaps="false" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
